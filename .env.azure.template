# Azure Production Environment Variables Template
# Copy this file to .env.azure and fill in your actual values
# DO NOT commit the .env.azure file to version control

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=sync-watch-rg
AZURE_LOCATION=East US

# App Service Names
AZURE_BACKEND_APP=sync-watch-api
AZURE_FRONTEND_APP=sync-watch-web

# Database Configuration
AZURE_DB_SERVER=sync-watch-db-server
AZURE_DB_NAME=videosync
AZURE_DB_USER=videosync_user
AZURE_DB_PASSWORD=your-secure-database-password

# Application URLs
BACKEND_URL=https://sync-watch-api.azurewebsites.net
FRONTEND_URL=https://sync-watch-web.azurewebsites.net

# Security
JWT_SECRET=your-super-secure-jwt-secret-minimum-32-characters
SESSION_SECRET=your-super-secure-session-secret-minimum-32-characters

# Google OAuth (Get from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# YouTube API (Get from Google Cloud Console)
YOUTUBE_API_KEY=your-youtube-api-key

# Application Insights
APPINSIGHTS_CONNECTION_STRING=your-application-insights-connection-string

# Optional: Feature Flags
VITE_ENABLE_GUEST_LOGIN=true
ENABLE_CHAT=true
ENABLE_VIDEO_SYNC=true

# Development/Debug Settings (set to false in production)
NODE_ENV=production
DEBUG=false
ENABLE_SWAGGER=false